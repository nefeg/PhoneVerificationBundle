{
  "name": "path-to-repo/phone-verify",
  "description": "Phone verification service with build-in adapter for Nexmo",
  "keywords": ["phone", "security"],
  "type": "symfony-bundle",
  "license": "MIT",
  "version": "0.3-dev",

  "repositories": [
    {
      "type": "vcs",
      "url": "set path to repo git here"
    }
  ],

  "require": {
    "php": "^7.1.3",
    "predis/predis": "^1.1",
    "guzzlehttp/guzzle": "~6.0"
  },
  "autoload": {
    "psr-4": {
      "Aimchat\\PhoneVerificationBundle\\": "src/"
    }
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    }
  }
}
